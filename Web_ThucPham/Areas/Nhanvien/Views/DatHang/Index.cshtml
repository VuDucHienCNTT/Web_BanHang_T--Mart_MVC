@model IEnumerable<Model.EntityFramework.ChiTietDatHang>
@{
    ViewBag.Title = "Danh sách hóa đơn đặt hàng";
    Layout = "~/Areas/Nhanvien/Views/Shared/_LayoutNhanVien.cshtml";
}

@section header{
    Danh sách đặt hàng
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách đặt hàng
            </div>
            <br />
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("HoaDon", "DatHang", FormMethod.Post))
                    {
                        <input type="text" id="text_tag_input" name="txtIDDatHang" />
                        <button class="btn btn-success" id="btnXuat" formtarget="_blank">Xuất hóa đơn</button>

                    }
                    <table style="width:100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Mã ĐH</th>
                                <th>Sản phẩm</th>
                                <th>Ảnh sản phẩm</th>
                                <th>Số Lượng</th>
                                <th>Giá sản phẩm</th>
                                <th>Tổng tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dathang in Model)
                            {
                                <tr id="row_@dathang.IdDatHang">

                                    <td><a href="#" id="test" onclick='f1(this)'>@dathang.IdDatHang</a></td>
                                    <td>@dathang.SanPham.TenSanPham</td>
                                    <td align="center"><img src="@dathang.SanPham.HinhAnh" height="40" width="40" /> </td>
                                    <td>@dathang.SoLuong</td>
                                    <td>@dathang.GiaSanPham</td>
                                    <td>@dathang.TongTien</td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function f1() {
        var hd = $("#test").text();
        $('#text_tag_input').val(hd);

    }
</script>
