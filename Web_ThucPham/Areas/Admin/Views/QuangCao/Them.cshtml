@model Model.EntityFramework.QuangCao
@{
    ViewBag.Title = "Thêm mới quảng cáo";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    Soạn mới quảng cáo
}
<link href="~/Assets/Admin/dist/css/buttonTrangthai.css" rel="stylesheet" />
@section js{
    <script src="~/Assets/Admin/js/buttonTrangthai.js"></script>
    <script>
        $(function () {
            $('#toggle-trangthai').bootstrapToggle({
                on: 'Kích hoạt',
                off: 'Khóa'
            });
        })
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-sm-1"></div>
        <div class="col-sm-9">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.LinkQc, htmlAttributes: new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.LinkQc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LinkQc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Ảnh quảng cáo", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8 col-xs-8">
                    @Html.EditorFor(model => model.AnhQc, new { htmlAttributes = new { @id = "txtHinhAnh", @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.AnhQc, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-1 col-md-1">
                    <input type="button" class="btn btn-primary" value="..." id="ChonAnh" />
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Trạng thái", htmlAttributes: new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.CheckBoxFor(model => model.TrangThai, new { @id = "toggle-trangthai", @checked = "checked", @class = "checkbox" })
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Người đăng quảng cáo", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.IdNguoiTao, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdNguoiTao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <input type="submit" value="Tạo mới" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
}

